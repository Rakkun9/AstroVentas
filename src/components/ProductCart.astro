---
const { product } = Astro.props;
---

<div class="max-w-sm rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 bg-white">
  <img class="w-full h-48 object-cover" src={product.image} alt={product.name}>
  <div class="p-6">
    <div class="font-bold text-xl mb-2 text-gray-800">{product.name}</div>
    <p class="text-gray-600 text-sm mb-2">Modelo: {product.model}</p>
    <p class="text-gray-600 text-sm mb-4">Calificaci√≥n: {product.rating}</p>
    <div class="flex items-center justify-between">
      <span class="text-lg font-semibold text-gray-800">${product.price}</span>
      <button class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors duration-300">
        Comprar
      </button>
    </div>
  </div>
</div>